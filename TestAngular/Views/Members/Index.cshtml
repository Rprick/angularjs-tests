@{
    ViewBag.Title = "Index";
}
<html ng-app>
    <head>
        <script src="~/Scripts/jquery-1.9.1.js"></script>
        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/members.js"></script>
    </head>
    <body>
        <h2>Angular Members</h2>
        <div ng-controller="MemberController">
            <span>Total members: {{totalMembers()}}</span>
            <ul>

                <li ng-repeat="member in members">
                    <div ng-show="!member.inEditMode">
                        <span>{{member.name}}</span>
                        <button ng-click="startEdit(member)">Edit</button>
                    </div>
                    <div ng-show="member.inEditMode">
                        <input type="text" ng-model="member.name" />
                        <button ng-click="saveMember(member)">Save</button>
                        <button ng-click="cancelMember(member)">Cancel</button>
                    </div>
                </li>
            </ul>

             <form ng-submit="addMember()">
                <input type="text" ng-model="memberText" size="30"
                                placeholder="add new member here">
                <input class="btn-primary" type="submit" value="add">
            </form>

            <button ng-click="reset()">Reset</button>
        </div>
    </body>
</html>

